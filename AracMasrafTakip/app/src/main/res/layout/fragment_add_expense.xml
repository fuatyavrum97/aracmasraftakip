<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2F4F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- Araç Bilgisi -->
        <TextView
            android:id="@+id/tvVehicleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araç: Ford Focus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000000"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kasko Masrafı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKasko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Benzin Masrafı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBenzin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bakım Masrafı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBakim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Vergi Masrafı -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vergi Masrafı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVergi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Diğer Masraf -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diğer Masraflar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDiger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Toplam Masraf -->
        <TextView
            android:id="@+id/tvToplamMasraf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toplam Masraf: 0 ₺"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0866FF"
            android:paddingTop="16dp"/>

        <!-- Kaydet Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKaydet"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Masrafları Kaydet"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_save_24"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:cornerRadius="20dp"
            android:background="@drawable/btn_primary"/>


    </LinearLayout>
</ScrollView>
